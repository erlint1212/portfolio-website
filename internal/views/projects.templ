templ GameView(gamePath string) {
    <div class="bg-slate-900 rounded-xl overflow-hidden shadow-2xl animate-fade-in relative">
        <div class="absolute top-4 right-4 z-10">
            <button 
                hx-get="/projects" 
                hx-target="#project-section" 
                hx-swap="outerHTML"
                class="bg-black/50 hover:bg-red-600 text-white p-2 rounded-full backdrop-blur-sm transition-colors"
                title="Close Game"
            >
                âœ•
            </button>
        </div>
        
        <div class="aspect-video w-full">
            <iframe src={ gamePath } class="w-full h-full" frameborder="0"></iframe>
        </div>
        
        <div class="bg-slate-800 p-4 flex justify-between items-center">
            <div class="text-white text-sm font-medium">Masked Platformer (WASM)</div>
            <span class="text-emerald-400 text-xs flex items-center gap-1">
                <span class="w-2 h-2 bg-emerald-400 rounded-full animate-pulse"></span>
                Live
